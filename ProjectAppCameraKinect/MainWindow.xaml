<Window x:Class="ProjectAppCameraKinect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projeto Câmera Kinect" Height="480" Width="640">
 
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Width="630" Margin="0,0,-12,11" Grid.Row="1" Grid.ColumnSpan="3">
            <Button Content="Iniciar Vídeo" Width="130"  Click="Button_IniciarVideo"/>
            <Button Content="Encerrar Vídeo" Width="130"  Click="Button_EncerrarVideo"/>
            <Button Content="Bater Foto" Width="130"  Click="Button_BaterFoto"/>
            <Button Content="Sair" Width="130"  Click="Button_Sair"/>
        </StackPanel>
        <Image Name="imagemCamera" />



        </Grid>
</Window>
